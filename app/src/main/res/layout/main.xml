<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Base">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:rowCount="8"
        android:columnCount="4"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="0dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/textForResult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="left|top"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:cursorVisible="false"
            android:ems="10"
            android:enabled="true"
            android:focusable="false"
            android:gravity="right"
            android:text="0"
            android:inputType="numberDecimal">
            <requestFocus />
        </EditText>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="7"
            android:id="@+id/btnSeven"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="top|left"
            android:height="70dp"
            android:width="70dp"
            android:contentDescription="7"
            android:onClick="buttonClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="8"
            android:id="@+id/btnEight"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="8"
            android:onClick="buttonClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="9"
            android:id="@+id/btnNine"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="top|left"
            android:height="70dp"
            android:width="70dp"
            android:contentDescription="9"
            android:onClick="buttonClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="&lt;-"
            android:id="@+id/btnC"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="Del" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="4"
            android:id="@+id/btnFour"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="4"
            android:onClick="buttonClick" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="5"
            android:id="@+id/btnFive"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="5"
            android:onClick="buttonClick" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="6"
            android:id="@+id/btnSix"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="6"
            android:onClick="buttonClick" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="1"
            android:id="@+id/btnOne"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="1"
            android:onClick="buttonClick" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="2"
            android:id="@+id/btnTwo"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="2"
            android:onClick="buttonClick" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="3"
            android:id="@+id/btnThree"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="3"
            android:onClick="buttonClick" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="-"
            android:id="@+id/btnSubstract"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="-"
            android:onClick="buttonClick"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="0"
            android:id="@+id/btnZero"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="0"
            android:onClick="buttonClick" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text=","
            android:id="@+id/btnDot"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="."
            android:onClick="buttonClick"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="+"
            android:id="@+id/btnAdd"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="+"
            android:onClick="buttonClick"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="/"
            android:id="@+id/btnDivide"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="="
            android:onClick="buttonClick"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="*"
            android:id="@+id/btnMultyply"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_gravity="top|left"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="*"
            android:onClick="buttonClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="C"
            android:id="@+id/btnClear"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left"
            android:width="140dp"
            android:height="70dp"
            android:contentDescription="C"
            android:onClick="buttonClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="="
            android:id="@+id/btneQually"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left"
            android:width="140dp"
            android:height="70dp"
            android:contentDescription="="
            android:onClick="buttonClick"/>
    </GridLayout>

</RelativeLayout>
